{
  "expo": {
    "name": "MGE Brothers clicker",
    "slug": "mge-brothers-clicker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",  // Путь к иконке уже указан — оставляем как есть
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [  // Добавлено: заменяет устаревшее "assets" для корректного включения всех файлов в бандл (включая иконку в ./assets/images/)
      "**/*"  // Универсальный паттерн — включает все файлы из ./assets/, ./assets/images/ и т.д.
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.LesnayaBratva.mgeclicker"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "1c33403e-1f79-443c-aa90-a91f62746000"
      }
    }
  }
}
